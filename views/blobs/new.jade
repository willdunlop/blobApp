extends ../layout

block content
	h1.
		#{title}
	form#formAddBlob(name="addblob",method="post",action="/blobs")
		p 
			input#inputName(type="text", placeholder="Enter Name", name="name")
		p
			input#inputBadge(type="number", placeholder="Enter Badge No.", name="badge")
		p Date of Birth:
			input#inputDob(type="date", name="dob")
		p Are you loved?:
			input#inputIsLoved(type="checkbox", name="isloved")
		p
			button#btnSubmit(type="submit") Submit
